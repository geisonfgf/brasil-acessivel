<div class="container">
  <h1>Logar</h1>

  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal) do |f| %>
    <%= f.email_field :email, autofocus: true, label: 'Email: ' %>
    <%= f.password_field :password, autocomplete: "off", label: 'Senha: ' %>
    <% if devise_mapping.rememberable? -%>
      <%= f.form_group do %>
        <%= f.check_box :remember_me %>
      <% end %>
    <% end -%>
    <%= f.form_group do %>
      <%= f.primary "Logar" %>&nbsp;
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: 'btn btn-default' %><br />
      <% end -%>
    <% end %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Registrar UsuÃ¡rio", new_registration_path(resource_name), class: 'btn btn-default' %><br />
  <% end -%>
</div>
