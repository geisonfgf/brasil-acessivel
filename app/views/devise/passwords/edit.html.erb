<div class="container">
  <h1>Mudar sua senha</h1>

  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, layout: :horizontal) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", label: 'Nova senha: ' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", label: 'Confirmar nova senha: ' %>
    <%= f.form_group do %>
      <%= f.primary "Mudar minha senha" %>
    <% end %>
  <% end %>

  <br/><br/>
  <%- if controller_name != 'sessions' %>
    <%= link_to "Logar", new_session_path(resource_name), class: 'btn btn-default' %>
  <% end -%>
  &nbsp;
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Registrar UsuÃ¡rio", new_registration_path(resource_name), class: 'btn btn-default' %>
  <% end -%>
</div>
