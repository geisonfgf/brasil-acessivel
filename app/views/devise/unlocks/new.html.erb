<div class="container">
  <h1>Reenviar informações de desbloqueio</h1>

  <%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, layout: :horizontal) do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, autofocus: true, label: 'Email: ' %>
    <%= f.form_group do %>
      <%= f.primary "Reenviar informações de desbloqueio" %>
    <% end %>
  <% end %>

  <br/><br/>
  <%- if controller_name != 'sessions' %>
    <%= link_to "Logar", new_session_path(resource_name), class: 'btn btn-default' %>
  <% end -%>
  &nbsp;
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Registrar Usuário", new_registration_path(resource_name), class: 'btn btn-default' %>
  <% end -%>
  &nbsp;
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: 'btn btn-default' %>
  <% end -%>
  &nbsp;
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Reenviar intruções de confirmação?", new_confirmation_path(resource_name), class: 'btn btn-default' %><br />
  <% end -%>
</div>
