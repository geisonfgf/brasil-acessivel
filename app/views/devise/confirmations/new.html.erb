<div class="container">
  <h1>Reenviar instruções de confirmação</h1>

  <%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, layout: :horizontal) do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, autofocus: true, label: 'Email: ' %>
    <%= f.form_group do %>
      <%= f.primary "Reenviar informações de confirmação" %>
    <% end %>
  <% end %>

  <br/><br/>
  <%- if controller_name != 'sessions' %>
    <%= link_to "Logar", new_session_path(resource_name), class: 'btn btn-default' %>
  <% end -%>
  &nbsp;
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Registrar Usuário", new_registration_path(resource_name), class: 'btn btn-default' %>
  <% end -%>
  &nbsp;
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: 'btn btn-default' %>
  <% end -%>
  &nbsp;
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Reenviar informações de desbloqueio?", new_unlock_path(resource_name), class: 'btn btn-default' %>
  <% end -%>
</div>
