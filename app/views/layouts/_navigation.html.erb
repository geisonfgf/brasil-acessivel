    <span class="sr-only">Toggle navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </a>
  <%= link_to "<span>#{image_tag 'brasil_accessivel_logo.png'}</span>&nbsp;Brasil Acessivel".html_safe, root_path, class: 'brand', id: 'logo' %>
  <ul class="nav navbar-nav pull-left">
    <li><%= link_to 'Ajude o Projeto', about_path('about') %></li>
    <li class="dropdown">
      <a class="dropdown-toggle" id="drop5" role="button" data-toggle="dropdown" href="#">
        Serviços <b class="caret"></b>
      </a>
      <ul id="menu2" class="dropdown-menu dropdown-toggle" role="menu" aria-labelledby="drop5">
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Ônibus</a></li>
