    <% else %>
    <li><div><%= link_to "Registrar", new_user_registration_path, class: 'btn btn-default navbar-btn register-button' %></div></li>
    <li><div><%= link_to "Logar", new_user_session_path, class: 'btn btn-success navbar-btn' %></div></li>
    <% end %>
  </ul>
